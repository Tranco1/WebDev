<!DOCTYPE html>
<html>
<head>
  <title>Edit Order</title>
</head>
<body>
  <h1>Edit Order</h1>
  <form action="/orders/update/<%= order.id %>" method="POST">
    <label>User:</label>
    <select name="user_id" required>
      <% users.forEach(u => { %>
        <option value="<%= u.id %>" <%= u.id === order.user_id ? 'selected' : '' %>>
          <%= u.name %>
        </option>
      <% }) %>
    </select><br><br>

    <label>Product:</label>
    <select name="product_id" required>
      <% products.forEach(p => { %>
        <option value="<%= p.id %>" <%= p.id === order.product_id ? 'selected' : '' %>>
          <%= p.name %>
        </option>
      <% }) %>
    </select><br><br>

    <label>Quantity:</label>
    <input type="number" name="quantity" value="<%= order.quantity %>" required><br><br>

    <label>Dealer:</label>
    <select name="dealer_id">
      <option value="">-- Select Dealer --</option>
      <% dealers.forEach(d => { %>
        <option value="<%= d.id %>" <%= order.dealer_id === d.id ? 'selected' : '' %>>
          <%= d.legalname %>
        </option>
      <% }) %>
    </select><br><br>

    <button type="submit">Update</button>
  </form>
  <a href="/">Back</a>
</body>
</html>
